<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProgramTabFragment">


    <android.support.design.widget.TabLayout
        android:id="@+id/tabProgram_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabItem
            android:id="@+id/myWorkouts_tabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_myworkouts" />

        <android.support.design.widget.TabItem
            android:id="@+id/favoritesPrograms_tabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_favoriteprograms" />
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/tabProgram_viewPager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />

</RelativeLayout>